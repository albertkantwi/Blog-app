<h1>Specific post</h1>

<div>
  <div>
    <h3>Post</h3>
  </div>
  <div>
    <p><%= @post.text %></p>
    <p>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></p>
  </div>
  <div>
    <% @post.comments.each do |comment| %>
      <p><strong><%= comment.user.name %>:</strong> <%= comment.text %></p>
    <% end %>
  </div>
</div>